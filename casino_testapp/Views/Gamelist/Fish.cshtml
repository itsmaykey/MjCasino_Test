@{
    ViewBag.Title = "Fish";
}

<div ng-controller="fishCtrlr">
    <div class="nav iconbg">
        <div class="nav iconbg">
            <ul class="nav-tabs nav-tabs-bordered d-flex navbuttons" id="borderedTabJustified" role="tablist"
                style="border-bottom:none;">
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="home-tab" role="tab" aria-controls="home" aria-selected="true"
                        href="~/Home/Index">
                        <img src="~/Content/assets/img/Dashboard/Home.png" alt="">

                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="Slot-tab" role="tab" aria-controls="home" aria-selected="true"
                        href="~/Gamelist/Slot">
                        <img src="~/Content/assets/img/Dashboard/Slotmachine.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="Poker-tab" role="tab" aria-controls="home"
                       aria-selected="true" href="~/Gamelist/Poker">
                        <img src="~/Content/assets/img/Dashboard/Poker.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="Live-tab" role="tab" aria-controls="home"
                       aria-selected="true" href="~/Gamelist/Live">
                        <img src="~/Content/assets/img/Dashboard/Live.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45 active" id="Fish-tab" role="tab" aria-controls="home"
                       aria-selected="true" href="~/Gamelist/Fish">
                        <img src="~/Content/assets/img/Dashboard/Fish_name.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="Sports-tab" role="tab" aria-controls="home"
                       aria-selected="true" href="~/Gamelist/Sports">
                        <img src="~/Content/assets/img/Dashboard/Sports.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="Cock-tab" role="tab" aria-controls="home" aria-selected="true"
                        href="~/Gamelist/Cockfight">
                        <img src="~/Content/assets/img/Dashboard/e_sabong.png" alt="">
                    </a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="nav-link w-45" id="MiniGames-tab" role="tab" aria-controls="home" aria-selected="true"
                        href="~/Gamelist/MiniGames">
                        <img src="~/Content/assets/img/Dashboard/MiniGames.png" alt="">

                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="card" style="background: transparent;">
        <div class="card-body" style="background: transparent;">
            <!-- Bordered Tabs Justified -->
            <ul class="nav nav-tabs nav-tabs-bordered d-flex" id="trialni" role="tablist">
                <li class="nav-item flex-fill" role="presentation">
                    <a class=" w-5" id="JL" role="tab" aria-controls="home" aria-selected="true">
                        <img src="~/Content/assets/img/icons/icon_jili.png" style="width: 50px; cursor:pointer"> </a>
                </li>

                <li class="nav-item flex-fill" role="presentation">
                    <a class="w-5" id="FC" role="tab" aria-controls="contact" aria-selected="false" tabindex="-1">
                        <img src="~/Content/assets/img/icons/icon_fachai.png" style="width: 50px; cursor:pointer"></a>
                </li>
                <li class="nav-item flex-fill" role="presentation">
                    <a class="w-5" id="JDB" role="tab" aria-controls="contact" aria-selected="false" tabindex="-1">
                        <img src="~/Content/assets/img/icons/icon_jdb.png" style="width: 50px; cursor:pointer"></a>
                </li>
            </ul>
        </div>
    </div><!-- End Bordered Tabs Justified -->

    <div class="loaderStyle" ng-show="showLoader">
        <div class="loader"></div>
    </div>

    <div class="row col-12 rowalign limitheight" style="overflow-y: auto; overflow-x:hidden; justify-content:center;" ng-show="showGames">
        <div class="col-12" style="text-align:-webkit-right">
            <div class="searchform">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword" ng-model="searched">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>

            </div>
        </div>

        <div class="col-1 responsiveimg" ng-repeat="x in Gamelist | limitTo :limit | filter:searched">


            <div class="card " style="width: fit-content; background:transparent;">
                <button class=" form-control rowbuttonalign" type="button" ng-click="getdata(x)"
                        style="background-color: transparent; border:none; align-self:flex-start">
                    <img src="{{x.gameCover}}" class="img-size" ng-model="x" alt="">
                    <label class="form-control-plaintext bttntext">{{x.gameName}}</label>
                </button>
            </div>
        </div>
    </div>

    <div class="row" style="display: flex; justify-content: center;">

        <button type="button" ng-click="viewmore()"
            style="height: 50px;width: 50px;text-align: center;background: transparent;color: white;border-radius: 50%;background-color: transparent;border: none;font-size: 45px;">...</button>


    </div>
</div>

@section scripts {
    <script src="~/Scripts/AngularJs/Gamelist/fishCtrl.js"></script>
}
